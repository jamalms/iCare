<%- include('../../shared/includes/head', { pageTitle: 'Signup' }) %>
  <link rel="stylesheet" href="/styles/forms.css">
  <link rel="stylesheet" href="/styles/auth.css">
</head>
<body>
  <%- include('../../shared/includes/header') %>
  <main>
    <h1>Create New Account</h1>
    <% if (inputData.errorMessage) { %>
      <section class="alert">
        <h2>Invalid Input</h2>
        <p><%= inputData.errorMessage %> </p>
      </section> 
      <% } %> 
    <form action="/signup" method="POST">
      <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
      <p>
        <label for="email">E-Mail</label>
        <input type="email" id="email" name="email" value="<%= inputData.email %>" required>
      </p>
      <p>
        <label for="confirm-email">Confirm Email</label>
        <input type="email" id="confirm-email" name="confirm-email" value="<%= inputData.confirmEmail %>" required>
      </p>
    
      <p>
        <label for="password">Password</label>
        <input type="password" id="password" name="password" minlength="6" value="<%= inputData.password %>" required>
      </p>
      <hr>
      <p>
        <label for="fullname">Full Name</label>
        <input type="text" id="fullname" name="fullname" value="<%= inputData.fullname %>" required>
      </p>
      <p>
        <div id="datewarn">
        <label for="birthDate">Birth Date</label>
        <input type="date" id="date" placeholder="DD/MM/YYYY" onkeyup="checkDate()" name="birthDate" value="<%= inputData.birthDate %>" required>
      </div>
      </p>
      <p>
        
    </p>
    </div> 
     
      <p>
        <label for="gender">Gender</label>
        <select  id="gender" name="gender" value="<%= inputData.gender %>" required>
        <option value="male">Male</option>
        <option value="female">Female</option>
        <option value="other">Other</option>
      </select>
      </p>
      <p>
        <label for="phone">Phone</label>
        <input type="text" id="phone" name="phone" value="<%= inputData.phone %>" required>
      </p>
      <p>
        <label for="address">Address</label>
        <input type="text" id="address" name="address" value="<%= inputData.address %>" required>
      </p>
   
      <button class="btn">Create Account</button>
      <p id="switch-form"><a href="/login">Login instead</a></p>
    </form>
  </main>
<%- include('../../shared/includes/footer') %>


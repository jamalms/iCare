<%- include('../../shared/includes/head', { pageTitle: 'All Patients' }) %>
<link rel="stylesheet" href="/styles/patient.css">
<script src="/scripts/patient-management.js" defer></script>

</head>
<body>
  <%- include('../../shared/includes/header') %>
  <main>
    <h1>Patient Administration</h1>
    <section>
      <h2>Manage Patient</h2>
      <p>
        <a href="/admin/add-patient" class="btn">Add Patient</a>
      </p>
    </section>
    <section>
      <ul id="patients-grid">
        <% for (const patient of patients) { %>
          <li>
           <%- include('../../shared/includes/patient-item', { patient: patient }) %>
            
          </li>
        <% } %>
      </ul>
    </section>
  </main>
<%- include('../../shared/includes/footer') %>
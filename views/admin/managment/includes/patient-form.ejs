<form action="/admin/patients" method="POST">
  <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
       
  
    <p>
      <label for="pTfullname">Full Name</label>
      <input type="text" id="pTfullname" name="pTfullname" required>
    </p>
    <p>
      <label for="birthDate">Birth Date</label>
      <input type="date" id="pTbirthDate" name="pTbirthDate"  
       required>
    </p>
   
    <p>
      <label for="pTgender">Gender</label>
      <select  id="pTgender" name="pTgender" 
      required>
      <option value="male">Male</option>
      <option value="female">Female</option>
      <option value="other">Other</option>
    </select>
    </p>
    <p>
      <label for="pTphone">Phone</label>
      <input type="text" id="pTphone" name="pTphone"  required>
    </p>
    <p>
      <label for="pTaddress">Address</label>
      <input type="text" id="pTaddress" name="pTaddress"   required>
    </p>

  
<p>
  <button type="reset" class="btn btn-alt">Reset</button>
  <button class="btn">Save</button>
</p>
</form>

